<h1>New User</h1>

<% if @errors %>
  <% @errors.each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<form action="/users" method="post">
  <label for="username">Username</label>
  <input type="text" name="new_user[username]" placeholder="username">
  <label for="password">Password</label>
  <input type="password" name="new_user[password]" placeholder="password">
  <input type="submit" value="Sign Up!">
</form>

