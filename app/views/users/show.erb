<h1><%= current_user.username %>'s Profile</h1>

<br>
<a href="/suggestions">Suggestion Feed</a>
<br>
<h3> Submit a suggestion: </h3>
<form action="/suggestions" method="post">
  <label for="suggestion[title]">Title:</label>
  <input type="text" name="suggestion[title]"placeholder="title">
  <br>
  <label for="suggestion[details]">Details:</label>
  <input type="text" name="suggestion[details]"placeholder="details">
  <br>
  <br>
  <input type="submit" value="submit">
</form>

<h3>Your suggestions:</h3>

<% current_user.suggestions.each do |suggestion| %>
<h4><%= suggestion.title %></h4>
<p><%= suggestion.details %></p>

    <form action="/suggestions/<%= suggestion.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" class="button" value="delete">
    </form>
    <a href="/suggestions/<%= suggestion.id %>/edit">Update</a>
  <% end %>

<br>
