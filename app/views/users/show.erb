<style>
  form { display: inline; }
</style>

<h1><%= current_user.username %>'s Profile</h1>

<a href='/suggestions/new'>Click here to make a suggestion</a>

<div class="user_suggestions">
  <p>*********************************************************************************</p>
  <h3><%= current_user.username %>'s Suggestions</h3>
  <% @suggestions.each do |suggestion| %>
    <% if suggestion.user == current_user %>

      <a href="/suggestions/<%= suggestion.id %>"><h4><%= suggestion.title %></h4></a>
      <p><%= suggestion.description %></p><br>
      <span class='votes'>Thumbs Up: <%= suggestion.vote_sum %></span>
      <%= erb :'users/_vote_buttons_user', layout: false, locals: {suggestion: suggestion} %>
      <a href="/suggestions/<%= suggestion.id %>/edit">Edit</a>
      <%= erb :"suggestions/_delete", layout: false, locals: {suggestion: suggestion} %><br><br>
      <%= erb :"_comments_form", layout: false %>
    <% end %>
  <% end %>
   <p>*********************************************************************************</p>
</div>


<div class="other_suggestions">
  <h3>Other Folks' Suggestions:</h3>
    <% @suggestions.each do |suggestion| %>
      <% if suggestion.user != current_user %>
      <a href="/suggestions/<%= suggestion.id %>"><h4><%= suggestion.title %></h4></a>
      <p><%= suggestion.description %></p>
      <span class='votes'>Thumbs Up: <%= suggestion.vote_sum %></span>
      <%= erb :'users/_vote_buttons_user', layout: false, locals: {suggestion: suggestion} %><br><br>
      <%= erb :"_comments_form", layout: false %>
      <p>-----------------------------------------------------------------------------------------------</p>
      <% end %>
    <% end%>
  <p>*********************************************************************************</p>
</div>

<div class="vote_suggestions">
  <h3>Suggestions You üëç:</h3>
    <% @votes.each do |vote| %>
      <% if vote.user_id == current_user.id %>
        <h4><%= vote.votable.title %></h4>
        <p><%= vote.votable.description %></p>
        <span class='votes'>Thumbs Up: <%= vote.votable.vote_sum %></span><br><br>
        <%= erb :"_comments_form", layout: false %>
      <p>-----------------------------------------------------------------------------------------------</p>
      <% end %>
    <% end%>
  <p>*********************************************************************************</p>
</div>
