<div id="vote-wrapper">
  <form id="vote" method="post" action='/suggestions/<%= suggestion.id %>/vote'>
    <input type="hidden" name="suggestion_id" value="<%= params[:id] %>">
    <button id ="button" type="submit" name="submit_param" value="submit_value">👍</button>
  </form>

  <form id="downvote" method="post" action='/suggestions/<%= suggestion.id %>/downvote'>
    <input type="hidden" name="suggestion_id" value="<%= params[:id] %>">
    <button id = "button" type="submit" name="submit_param" value="submit_value">👎</button>
  </form>
</div>
